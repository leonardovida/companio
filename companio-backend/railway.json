{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "nixpacks",
      "buildCommand": "bash init.sh"
    },
    "deploy": {
      "startCommand": "/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 1
    }
  }